@model dynamic
@using FileSystemBAL.Desk.Models
@using FileSystemUtility.Utilities
@using FileSystemUtility.Models

@if (Model.GetDeskList != null && Model.GetDeskList.Count > 0)
{
    foreach (DeskListResult loDeskList in Model.GetDeskList)
    {
        <tr>
            <td>@loDeskList.stZoneName</td>
            <td>@loDeskList.stDivisionName</td>
            <td>@loDeskList.stDepartmentName</td>
            <td>@loDeskList.stDesignationName</td>
            <td>@loDeskList.stDeskName</td>
            <td class="text-center"><a asp-area="Admin" asp-controller="Desk" asp-action="Detail" asp-route-id="@loDeskList.unDeskId" class="btn btn-outline-secondary btn-sm edit"><i class="fas fa-pencil-alt"></i> </a></td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="8" class="text-center py-5">No records found.</td>
    </tr>
}

@{
    Pagination loPagination = Model.Pagination;
    <input type="hidden" id="hdnCurrentPage" value="@loPagination.inCurrentPage">
    <input type="hidden" id="hdnTotalPage" value="@loPagination.inTotalPages" />
    <input type="hidden" id="hdnTotalRecords" value="@loPagination.inTotalRecords" />
    <input type="hidden" id="hdnNoOfRecordsMessage" value="@loPagination.stNoOfRecordsMessage" />

}
