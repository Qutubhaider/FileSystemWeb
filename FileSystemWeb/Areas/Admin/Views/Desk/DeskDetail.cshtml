@model FileSystemBAL.Division.Models.Division;
@{
    Layout = "_LayoutAdmin";
    ViewBag.Title = "Desk Detail";
}
<div class="container-fluid">
    <!-- start page title -->
    <div class="row">
        <div class="col-8">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0">Desk Detail</h4>
            </div>
        </div>
        <div class="col-4" style="float:right;">
            <a class="btn btn-danger" style="float: right;" asp-area="Admin" asp-controller="Desk" asp-action="Index">Back</a>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-6">
            <div class="card">
                <div class="card-body">
                    <form class="custom-validation" asp-action="saveDesk" asp-controller="Desk" asp-area="Admin">
                        <div class="mb-3">
                            <label class="form-label">Zone Name</label>
                            <select class="select2 form-control select2-multiple" data-placeholder="Choose ...">
                                <option value="">Select Zone Name</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Division Name</label>
                            <select class="select2 form-control select2-multiple" data-placeholder="Choose ...">
                                <option value="">Select Division Name</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Designation Name</label>
                            <select class="select2 form-control select2-multiple" data-placeholder="Choose ...">
                                <option value="">Select Designation Name</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Desk Name</label>
                            <input type="text" class="form-control" placeholder="Desk Name">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Status</label>
                            <select class="select2 form-control select2-multiple" data-placeholder="Choose ...">
                                <option value="">Select Statud</option>
                                <option value="1">Active</option>
                                <option value="2">Inactive</option>
                            </select>
                        </div>
                        <div>
                            <div>
                                <button type="submit" class="btn btn-primary waves-effect waves-light me-1">
                                    Submit
                                </button>
                                <button type="reset" class="btn btn-secondary waves-effect">
                                    Cancel
                                </button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml" />
}
