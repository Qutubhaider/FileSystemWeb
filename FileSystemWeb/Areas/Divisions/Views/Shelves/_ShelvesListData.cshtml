@model dynamic
@using FileSystemBAL.Shelve.Models
@using FileSystemUtility.Utilities
@using FileSystemUtility.Models



@if (Model.GetShelveList != null && Model.GetShelveList.Count > 0)
{
    foreach (ShelveListResult loShelveList in Model.GetShelveList)
    {
        <tr>
            <td>@loShelveList.stZoneName</td>
            <td>@loShelveList.stDivisionName</td>
            <td>@loShelveList.stDepartmentName</td>
            <td>@loShelveList.stStoreName</td>
            <td>@loShelveList.stRoomNumber</td>
            <td>@loShelveList.stAlmirahNumber</td>
            <td>@loShelveList.stShelveNumber</td>
            <td class="text-center"><a asp-area="Divisions" asp-controller="Shelves" asp-action="Detail" asp-route-id="@loShelveList.unShelveId" class="btn btn-outline-secondary btn-sm edit"><i class="fas fa-pencil-alt"></i> </a></td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="8" class="text-center py-5">No records found.</td>
    </tr>
}

@{
    Pagination loPagination = Model.Pagination;

    <input type="hidden" id="hdnCurrentPage" value="@loPagination.inCurrentPage">
    <input type="hidden" id="hdnTotalPage" value="@loPagination.inTotalPages" />
    <input type="hidden" id="hdnTotalRecords" value="@loPagination.inTotalRecords" />
    <input type="hidden" id="hdnNoOfRecordsMessage" value="@loPagination.stNoOfRecordsMessage" />

}

