@model FileSystemBAL.Store.Models.Store;
@{
    Layout = "_LoyoutDivision";
    ViewBag.Title = "Store Detail";
}
<div class="container-fluid">
    <!-- start page title -->
    <div class="row">
        <div class="col-8">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0">Store Detail</h4>
            </div>
        </div>
        <div class="col-4" style="float:right;">
            <a class="btn btn-danger" style="float: right;" asp-area="Admin" asp-controller="Store" asp-action="Index">Back</a>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-6">
            <div class="card">
                <div class="card-body">
                    <form class="custom-validation" asp-action="saveStore" asp-controller="Store" asp-area="Admin" novalidate="">
                        <div class="mb-3">
                            <label class="form-label">Zone Name</label>
                            <select asp-for="inZoneId" id="ddZone" onchange="OnZoneChange()"  class="select2 form-control select2-multiple" data-placeholder="Choose ..." asp-items="@(new SelectList(Model.ZoneList,"id","value"))">
                                <option value="">Select Zone Name</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Division Name</label>
                            <select asp-for="inDivisionId" id="ddDivision" class="select2 form-control select2-multiple" data-placeholder="Choose ...">
                                <option value="">Select Division Name</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Department Name</label>
                            <select asp-for="inDepartmentId" id="ddDepartment" class="select2 form-control select2-multiple" data-placeholder="Choose ..." asp-items="@(new SelectList(Model.DepartmentList,"id","value"));">
                                <option value="">Select Department Name</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Store Name</label>
                            <input asp-for="stStoreName" type="text" class="form-control" placeholder="Store Name">
                        </div>

                        <div>
                            <div>
                                <button type="submit" class="btn btn-primary waves-effect waves-light me-1">
                                    Submit
                                </button>
                                <button type="reset" class="btn btn-secondary waves-effect">
                                    Cancel
                                </button>
                            </div>
                        </div>
                        <input type="hidden" asp-for="inDepartmentId" />
                        <input type="hidden" asp-for="inStoreId" />
                        <input type="hidden" asp-for="inDivisionId" />
                        <input type="hidden" asp-for="inZoneId" />
                        <input type="hidden" asp-for="unStoreId" />
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml" />
    <script src="~/Scripts/Common/Common.js" asp-append-version="true"></script>
    <script type="text/javascript">
        var msGetDivisionDropDown = '@Url.Action("GetDivisionDropdown")';
            $(document).ready(function () {
                OnZoneChange(true);

        });
    </script>
    <script src="~/Scripts/Common//Dropdown.js" asp-append-version="true"></script>
}
