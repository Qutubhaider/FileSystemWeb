@model dynamic
@using FileSystemBAL.Store.Models
@using FileSystemUtility.Utilities
@using FileSystemUtility.Models

@if (Model.GetStoreList != null && Model.GetStoreList.Count > 0)
{
    foreach (StoreListResult loStoreList in Model.GetStoreList)
    {
        <tr>
            <td>@loStoreList.stZoneName</td>
            <td>@loStoreList.stDivisionName</td>
            <td>@loStoreList.stDepartmentName</td>
            <td>@loStoreList.stStoreName</td>
            <td class="text-center"><a asp-area="Divisions" asp-controller="Store" asp-action="Detail" asp-route-id="@loStoreList.unStoreId" class="btn btn-outline-secondary btn-sm edit"><i class="fas fa-pencil-alt"></i> </a></td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="8" class="text-center py-5">No records found.</td>
    </tr>
}

@{
    Pagination loPagination = Model.Pagination;

    <input type="hidden" id="hdnCurrentPage" value="@loPagination.inCurrentPage">
    <input type="hidden" id="hdnTotalPage" value="@loPagination.inTotalPages" />
    <input type="hidden" id="hdnTotalRecords" value="@loPagination.inTotalRecords" />
    <input type="hidden" id="hdnNoOfRecordsMessage" value="@loPagination.stNoOfRecordsMessage" />

}
