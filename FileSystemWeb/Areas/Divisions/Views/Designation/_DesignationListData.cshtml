@using FileSystemBAL.Designation.Models;
@using FileSystemUtility.Utilities;
@using FileSystemUtility.Models;

@if (Model.GetDesignationList != null && Model.GetDesignationList.Count > 0)
{
    foreach (DesignationListResult loDesignationListResults in Model.GetDesignationList)
    {
        <tr>
            <td>@loDesignationListResults.stDepartmentName</td>
            <td>@loDesignationListResults.stDesignationName</td>
            <td class="text-center"><a asp-area="Divisions" asp-controller="Designation" asp-action="Detail" asp-route-id="@loDesignationListResults.unDesignationId" class="btn btn-outline-secondary btn-sm edit"><i class="fas fa-pencil-alt"></i> </a></td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="8" class="text-center py-5">No records found.</td>
    </tr>
}

@{
    Pagination loPagination = Model.Pagination;

    <input type="hidden" id="hdnCurrentPage" value="@loPagination.inCurrentPage">
    <input type="hidden" id="hdnTotalPage" value="@loPagination.inTotalPages" />
    <input type="hidden" id="hdnTotalRecords" value="@loPagination.inTotalRecords" />
    <input type="hidden" id="hdnNoOfRecordsMessage" value="@loPagination.stNoOfRecordsMessage" />

}



